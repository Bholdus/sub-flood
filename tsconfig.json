{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "pretty": true,
    "sourceMap": true,
    "declaration": true,
    "target": "es6",
    "outDir": "./dist",
    "resolveJsonModule": true,
    "skipDefaultLibCheck": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "profileExamples",
    "dist"
  ]
}
